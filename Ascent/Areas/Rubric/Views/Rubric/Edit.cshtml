@model RubricInputModel
@{
    ViewData["Title"] = "New Rubric";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Rubrics</a></li>
        <li class="breadcrumb-item"><a asp-action="View" asp-route-id="@ViewBag.Rubric.Id">@Model.Name</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
</nav>

<form method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Name" required>
                <label asp-for="Name"></label>
            </div>
        </div>
        <div class="col-12">
            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="TimePublished" class="form-control">
                <label asp-for="TimePublished"></label>
            </div>
        </div>
        <div class="col-12 d-flex">
            <a class="btn btn-secondary me-2" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary me-auto">Save</button>
            <a asp-controller="Criterion" asp-action="Index" asp-route-rubricId="@ViewBag.Rubric.Id"
               class="btn btn-primary">Edit Criteria</a>
        </div>
    </div>
</form>

@section StyleSheets {
    <link rel="stylesheet" href="~/lib/summernote/summernote-bs5.min.css" />
}
@section Scripts {
    <script src="~/lib/summernote/summernote-bs5.min.js"></script>
    <script src="~/js/summernote-options.js"></script>
    <script>
        $(function () {
            $("#Description").summernote(summernoteOptions.standard());
        });
    </script>
}