<div class="row row-cols-1 row-cols-lg-2 g-4">
    @foreach (var assignment in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-header d-flex align-items-center">
                    <span>@assignment.Name</span>
                    @if (assignment.PeerReviews)
                    {
                        <span class="badge text-bg-info ms-auto">Peer Review</span>
                    }
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="flex-grow-1">@Html.Raw(@assignment.Description)</div>
                    @if (assignment.RubricSettings != null)
                    {
                    <p class="card-text border rounded d-flex p-2">
                      <span class="flex-grow-1">Rubric: @assignment.RubricSettings.Title</span>
                      <a asp-controller="Assignment" asp-action="ImportRubricAssessments" asp-route-id="@assignment.Id"
                         asp-route-courseId="@ViewBag.Course.Id"
                         asp-route-hasImport="@(lastImportTimes[assignment.Id] != default)"
                         title="Import Rubric Assessments" class="btn btn-outline-primary btn-sm text-nowrap">
                        @if (lastImportTimes[assignment.Id] != default)
                        {
                          <span class="badge text-bg-secondary">
                            @lastImportTimes[assignment.Id].ToLocalTime().ToString("d")
                          </span>
                        }
                        <i class="bi bi-box-arrow-down"></i>
                      </a>
                      <a asp-controller="Assignment" asp-action="DownloadRubricAssessments"
                         asp-route-id="@assignment.Id" asp-route-courseId="@ViewBag.Course.Id"
                         title="Download Rubric Assessments" class="btn btn-outline-primary btn-sm text-nowrap ms-2">
                        <i class="bi bi-file-arrow-down"></i>
                      </a>
                    </p>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script>
        $(function () {
          $(".spinner-border").hide();
          $("form").submit(function () {
            $("#cancel").addClass("disabled");
            $("#submit").prop("disabled", true);
            $(".spinner-border").show();
          });
        });
    </script>
}
