@inject IAuthorizationService AuthorizationService
@model List<CourseJournal>
@{
    ViewData["Title"] = "Course Journals";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active me-auto">Course Journals</li>
        @if ((await AuthorizationService.AuthorizeAsync(User, Constants.Policy.CanWrite)).Succeeded)
        {
            <li>
                <a asp-action="Add" class="btn btn-outline-primary btn-sm" title="Add Course Journal">
                    <i class="bi bi-plus-lg"></i>
                </a>
            </li>
        }
    </ol>
</nav>

@if (Model.Count > 0)
{
    <table class="table table-striped align-middle">
        <thead>
            <tr><th>Course</th><th>Term</th><th class="d-none d-md-table-cell">Instructor</th></tr>
        </thead>
        <tbody>
            @foreach (var journal in Model)
            {
                <tr>
                    <td><a asp-action="View" asp-route-id="@journal.Id">@journal.Course.Code @journal.Course.Title</a></td>
                    <td>@journal.Term.Name</td>
                    <td class="d-none d-md-table-cell">@journal.Instructor.FullName</td>
                </tr>
            }
        </tbody>
    </table>
}
