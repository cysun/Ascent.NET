@model Group
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "View Group";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Groups</a></li>
        <li class="breadcrumb-item active me-auto">@Model.Name</li>
        @if ((await AuthorizationService.AuthorizeAsync(User, Constants.Policy.CanWrite)).Succeeded)
        {
            <li>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm" title="Edit Group">
                    <i class="bi bi-pencil-fill"></i>
                </a>
            </li>
        }
    </ol>
</nav>

<span class="badge text-bg-success">Prefer @Model.EmailPreference.ToString() Email</span>

<table class="table table-striped mt-3">
    <thead>
        <tr><th>CIN</th><th>Name</th><th>School Email</th><th>Personal Email</th></tr>
    </thead>
    <tbody>
        @foreach (var member in ViewBag.Members)
        {
            <tr>
                <td>@member.CampusId</td>
                <td>@member.Name</td>
                <td>@member.SchoolEmail</td>
                <td>@member.PersonalEmail</td>
            </tr>
        }
    </tbody>
</table>