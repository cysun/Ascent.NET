@model List<Group>
@{
    ViewData["Title"] = "Import Group";
    var groupItems = Model.Select(g => new SelectListItem
            {
                Text = g.Name,
                Value = g.Id.ToString()
            });
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Import</a></li>
        <li class="breadcrumb-item active">Group</li>
    </ol>
</nav>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <select name="groupId" class="form-select mb-3" asp-items="@groupItems"></select>
        </div>
        <div class="col-md-8">
            <input id="file" name="uploadedFile" class="form-control mb-3" type="file">
        </div>
        <div class="col">
            <a id="cancel" class="btn btn-secondary me-2" asp-action="Index">Cancel</a>
            <button id="import" type="button" class="btn btn-primary">Import</button>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        $(function () {
            $("#import").click(function () {
                $("#cancel").addClass("disabled");
                $(this).prop("disabled", true);
                $(this).html("<span class='spinner-border spinner-border-sm'></span> Sending");
                $("form").submit();
            });
        });
    </script>
}